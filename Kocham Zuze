        <div class="buttons">
            <button id="yes">Tak! üòä</button>
            <button id="no">Nie... üò¢</button>
        </div>
        <div id="message"></div>
        <img id="kitten" src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExcWZ2Z2J0d3VzY2U5bGZ4dXJ4bG1tZ3JmYjV6eW5xZzV1bW5iZGZ5dyZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/3oriO0OEd9QIDdllqo/giphy.gif" alt="S≈Çodki kotek">
    </div>

    <script>
        const yesButton = document.getElementById('yes');
        const noButton = document.getElementById('no');
        const message = document.getElementById('message');
        const kitten = document.getElementById('kitten');
        const heartsContainer = document.getElementById('hearts');
        
        yesButton.addEventListener('click', function() {
            message.innerHTML = 'Ja ciebie te≈º kocham! ‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è';
            noButton.style.display = 'none';
            kitten.style.display = 'block';
            yesButton.style.fontSize = '24px';
            yesButton.style.padding = '15px 40px';
            
            // Tworzenie serduszek
            for(let i = 0; i < 50; i++) {
                createHeart();
            }
        });
        
        noButton.addEventListener('mouseover', function() {
            // Losowe pozycje przycisku "Nie"
            const x = Math.random() * (window.innerWidth - 200);
            const y = Math.random() * (window.innerHeight - 100);
            
            noButton.style.position = 'absolute';
            noButton.style.left = x + 'px';
            noButton.style.top = y + 'px';
            
            // Zwiƒôkszanie rozmiaru przycisku "Tak"
            const currentSize = parseInt(window.getComputedStyle(yesButton).fontSize);
            yesButton.style.fontSize = (currentSize + 2) + 'px';
        });
        
        noButton.addEventListener('click', function() {
            // Je≈õli jednak uda siƒô kliknƒÖƒá "Nie"
            message.textContent = 'Spr√≥buj jeszcze raz! Proszƒô! ü•∫';
        });
        
        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.innerHTML = '‚ù§Ô∏è';
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.top = Math.random() * 100 + 'vh';
            heart.style.fontSize = (Math.random() * 20 + 10) + 'px';
            heart.style.animationDuration = (Math.random() * 3 + 2) + 's';
            heart.style.animationDelay = Math.random() * 2 + 's';
            
            heartsContainer.appendChild(heart);
            
            setTimeout(() => {
                heart.remove();
            }, 5000);
        }
    </script>
